{% extends '_layout.njk' %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBackLink({
        text: "Back",
        href: "/",
        attributes: {
          id: "back"
        }
      }) 
    }}
{% endblock %}

{% block content %}
  <main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
         {% if message %}
          <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
              There is a problem
            </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                <span class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span>
                  {{ message }}
                </span>
              </ul>
            </div>
          </div>
        {% endif %}
        
        <form method ="POST" action="/how-to-sign-in">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
          {{ govukRadios({
            name: "selection",
            fieldset: {
              legend: {
                text: "How do you want to sign in?",
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l"
              }
            },
            hint: {
              text: "You’ll need an account to make or update a rural payments claim."
            },
            items: [
              {
                value: "login",
                text: "Sign in with your CRN and password",
                hint: {
                  text: "You’ll have a customer reference number and password if you’ve already registered for the Rural Payments Service."
                }
              },
              {
                value: "register",
                text: "Register for the Rural Payments Service",
                hint: {
                  text: "You must register before you can make a Rural Payments claim."
                }
              }
            ]
          }) }}
          
          {{ govukButton({
            text: "Continue",
            attributes: {
            id: "submit"
          }
          }) }}

        </form>
      </div>
    </div>
  </main>
{% endblock %}

